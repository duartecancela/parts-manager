{
    "openapi": "3.0.0",
    "info": {
        "title": "Parts Manager API",
        "version": "0.1"
    },
    "paths": {
        "/api/login": {
            "get": {
                "tags": [
                    "auth"
                ],
                "summary": "User login.",
                "description": "User login",
                "operationId": "signin",
                "requestBody": {
                    "description": "Insert login fields",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "duarte@mail.pt"
                                    },
                                    "password": {
                                        "type": "int",
                                        "example": "12345"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "part": {
                                            "type": "Object",
                                            "example": {
                                                "success": true,
                                                "data": {
                                                    "token": "3|AGq3cwMXiBoHt84yGuWytjLptSDZ5AU0ZVKIH58d",
                                                    "name": "Duarte"
                                                },
                                                "message": "User signed in."
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Register user.",
                "description": "register user",
                "operationId": "signup",
                "requestBody": {
                    "description": "Insert register fields",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "confirm_password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Duarte"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "duarte@mail.pt"
                                    },
                                    "passord": {
                                        "type": "int",
                                        "example": "12345"
                                    },
                                    "confirm_password": {
                                        "type": "int",
                                        "example": "12345"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "part": {
                                            "type": "Object",
                                            "example": {
                                                "success": true,
                                                "data": {
                                                    "token": "3|AGq3cwMXiBoHt84yGuWytjLptSDZ5AU0ZVKIH58d",
                                                    "name": "Duarte"
                                                },
                                                "message": "User created successfully."
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/parts": {
            "get": {
                "tags": [
                    "part"
                ],
                "summary": "List parts.",
                "description": "List of all electronic parts",
                "operationId": "index",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "part": {
                                            "type": "Object",
                                            "example": {
                                                "id": 1,
                                                "name": "BC545",
                                                "category": "Transistores",
                                                "quantity": 0
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "part"
                ],
                "summary": "Store part.",
                "description": "Store an electronic part",
                "operationId": "store",
                "requestBody": {
                    "description": "Insert part fields",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "category",
                                    "quantity"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "BC545"
                                    },
                                    "category_id": {
                                        "type": "string",
                                        "example": "1"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "general propose transistor"
                                    },
                                    "quantity": {
                                        "type": "int",
                                        "example": "0"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "part": {
                                            "type": "Object",
                                            "example": {
                                                "id'": 1,
                                                "name": "BC545",
                                                "category_id": "1",
                                                "quantity": 0
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/parts/{id}": {
            "get": {
                "tags": [
                    "part"
                ],
                "summary": "Show part.",
                "description": "Show an electronic part",
                "operationId": "show",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "part": {
                                            "type": "Object",
                                            "example": {
                                                "id": 5,
                                                "category_id": 2,
                                                "name": "250",
                                                "description": "1/4 W",
                                                "stock": 0,
                                                "created_at": "12/15/2021",
                                                "updated_at": "12/15/2021"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "part"
                ],
                "summary": "Update part",
                "description": "Update an electronic part",
                "operationId": "Upadte",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "name of Part",
                        "required": true,
                        "schema": {
                            "type": "String",
                            "format": "String"
                        },
                        "example": "BC545"
                    },
                    {
                        "name": "category_id",
                        "in": "path",
                        "description": "Id of Category",
                        "required": true,
                        "schema": {
                            "type": "Integer",
                            "format": "int"
                        },
                        "example": "1"
                    },
                    {
                        "name": "description",
                        "in": "path",
                        "description": "Part description",
                        "required": false,
                        "schema": {
                            "type": "String",
                            "format": "string"
                        },
                        "example": "Generic Transistor"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "part": {
                                            "type": "Object",
                                            "example": {
                                                "id": 5,
                                                "category_id": "1",
                                                "name": "BC545",
                                                "description": "Generic Transistor",
                                                "created_at": "12/15/2021",
                                                "updated_at": "01/27/2022"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "part"
                ],
                "summary": "Delete part.",
                "description": "Delete an electronic part",
                "operationId": "destroy",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "part": {
                                            "type": "Object",
                                            "example": {
                                                "success": true,
                                                "data": "[]",
                                                "message": "Part deleted."
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "security": [
        []
    ]
}